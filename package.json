{
  "name": "@faast/stellar-payments",
  "version": "0.15.0",
  "description": "Library for processing stellar payments",
  "main": "dist/index.cjs.js",
  "module": "dist/index.es.js",
  "browser": "dist/index.umd.js",
  "types": "dist/lib/index.d.ts",
  "esnext": "dist/lib/index.js",
  "files": [
    "dist/",
    "src/"
  ],
  "engines": {
    "node": ">=6.0.0"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/go-faast/stellar-payments.git"
  },
  "scripts": {
    "lint": "tslint --project tsconfig.json -t codeFrame 'src/**/*.ts' 'test/**/*.ts'",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "docs": "typedoc --options typedoc.js",
    "prebuild": "rimraf dist",
    "build": "tsc --build ./tsconfig.build.json && rollup -c rollup.config.js && npm run docs",
    "start": "rollup -c rollup.config.ts -w",
    "pretest": "npm run lint",
    "test": "jest --runInBand --detectOpenHandles --bail",
    "report-coverage": "cat ./coverage/lcov.info | coveralls",
    "precommit": "lint-staged",
    "preversion": "bin/preversion.sh",
    "version": "npm run build && git add -Af dist docs",
    "postversion": "git push && git push --tags",
    "release": "npm publish --access=public"
  },
  "devDependencies": {
    "@faast/ts-config": "^1.3.1",
    "@types/bip39": "^2.4.2",
    "@types/jest": "^23.3.2",
    "@types/node": "^10.14.13",
    "@types/node-fetch": "^2.5.0",
    "@types/promise-retry": "^1.1.3",
    "coveralls": "^3.0.2",
    "husky": "^1.3.1",
    "jest": "^24.9.0",
    "jest-circus": "^24.9.0",
    "jest-config": "^24.9.0",
    "lint-staged": "^8.0.0",
    "node-fetch": "^2.6.0",
    "prettier": "^1.14.3",
    "rimraf": "^2.6.2",
    "rollup": "^0.67.0",
    "rollup-plugin-commonjs": "^9.1.8",
    "rollup-plugin-json": "^3.1.0",
    "rollup-plugin-node-resolve": "^4.2.3",
    "rollup-plugin-sourcemaps": "^0.4.2",
    "rollup-plugin-typescript2": "^0.18.0",
    "ts-jest": "^24.1.0",
    "ts-lint": "^4.5.1",
    "ts-node": "^7.0.1",
    "tsconfig-paths": "^3.9.0",
    "tslint": "^5.14.0",
    "typedoc": "^0.14.2",
    "typescript": "^3.4.3"
  },
  "dependencies": {
    "@faast/payments-common": "^0.15.1",
    "@faast/ts-common": "^0.4.2",
    "base-x": "^3.0.6",
    "bignumber.js": "^9.0.0",
    "bip32": "^2.0.3",
    "bip39": "^3.0.2",
    "io-ts": "^1.10.4",
    "lodash": "^4.17.15",
    "promise-retry": "^1.1.1",
    "stellar-hd-wallet": "0.0.10",
    "stellar-sdk": "^3.0.1"
  }
}
